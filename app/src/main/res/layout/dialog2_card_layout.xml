<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/dialog_card"
    android:rotation="180">
    <!--
     android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/dialog2_card_elevation"
        android:layout_marginTop="@dimen/dialog2_card_out_top"
        android:layout_marginLeft="@dimen/dialog2_card_out_left"
        android:layout_marginRight="@dimen/dialog2_card_out_right"
        android:layout_marginBottom="@dimen/dialog2_card_out_bottom"
        card_view:cardCornerRadius="@dimen/dialog2_card_radius"
        android:id="@+id/view">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_card_text"
                android:textSize="@dimen/dialog2_card_text"
                android:textColor="@color/dialog2_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dialog2_card_text_left"
                android:paddingRight="@dimen/dialog2_card_text_rigth"
                android:paddingTop="@dimen/dialog2_card_text_top"
                android:paddingBottom="@dimen/dialog2_card_text_bottom"/>
            <ImageButton
                android:layout_width="@dimen/dialog2_card_image_width"
                android:minWidth="@dimen/dialog2_card_image_width"
                android:layout_height="@dimen/dialog2_card_image_height"
                android:id="@+id/card_button"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dialog2_card_more_button_selector"
                android:layout_weight="0" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>